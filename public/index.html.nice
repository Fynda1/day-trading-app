        function toggleHoldMode() {
            isHoldMode = !isHoldMode;
            const holdBtn = document.getElementById('holdBtn');
            const holdStatus = document.getElementById('holdStatus');
            const holdStatusText = document.getElementById('holdStatusText');
            
