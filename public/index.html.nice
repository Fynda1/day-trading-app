        }

        function startSchwabAuth() {
            if (!window.schwabAPI) {
                alert('‚ùå Schwab API not loaded. Please refresh the page and try again.');
                return;
            }

            try {
                const authUrl = window.schwabAPI.getAuthorizationUrl();
                console.log('üîó Opening authorization URL:', authUrl);
                window.open(authUrl, '_blank', 'width=600,height=700');
                
                document.getElementById('authCode').style.display = 'block';
                document.getElementById('completeAuthBtn').style.display = 'block';
                
                addLog('üîó Authorization window opened - complete auth in popup', 'info');
            } catch (error) {
                console.error('‚ùå Failed to start auth:', error);
                alert('‚ùå Failed to start authorization. Please check the console for details.');
            }
        }

        async function completeAuth() {
