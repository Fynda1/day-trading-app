                console.log('üîÑ Attempting to authenticate with code...');
                
                const success = await window.schwabAPI.getTokens(authCode);
                if (success) {
                    console.log('‚úÖ Authentication successful');
                    enableLiveMode();
                    closeAuthModal();
                    addLog('üéâ Successfully connected to Schwab Live Trading!', 'success');
                    alert('‚úÖ Successfully connected to Schwab!\n\nYou are now in LIVE TRADING MODE with real money.');
                } else {
                    throw new Error('Failed to get tokens');
                }
            } catch (error) {
                console.error('‚ùå Authentication failed:', error);
                alert(`‚ùå Authentication failed: ${error.message}\n\nPlease check your authorization code and try again.`);
                addLog(`‚ùå Authentication failed: ${error.message}`, 'error');
            }
        }

