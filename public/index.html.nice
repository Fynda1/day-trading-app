                if (confirm('üö® Close ALL live positions?\n\nThis will sell all stocks in your account!')) {
                    addLog('üí• LIVE: Attempting to close all positions', 'warning');
                    alert('Close all positions feature coming soon!\n\nPlease close positions manually in your Schwab app for now.');
                }
            } else {
                activeTrades.length = 0;
                updateActiveTradesList();
